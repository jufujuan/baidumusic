<?xml version="1.0" encoding="utf-8"?><!--mianActivity底部音乐播放的bar-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ac_main_minibar_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:background="#15adf4"
        android:src="@mipmap/default_album_playing" />

    <LinearLayout
        android:id="@+id/ac_main_minibar_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌曲名" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌词" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ac_main_minibar_past"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:src="@mipmap/bt_minibar_playinglist_normal" />

    <ImageView
        android:id="@+id/ac_main_minibar_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:src="@mipmap/bt_minibar_play_normal" />

    <ImageView
        android:id="@+id/ac_main_minibar_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:src="@mipmap/bt_minibar_next_normal" />


</LinearLayout>