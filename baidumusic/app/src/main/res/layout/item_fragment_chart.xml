<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--榜单图片-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:layout_weight="0.7"
        android:background="@mipmap/new_song"
        android:gravity="bottom|right">

        <ImageView
            android:id="@+id/ml_chart_img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fra_chart_small_icon" />
    </LinearLayout>
    <!--榜单前三名-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ml_chart_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX榜"
            android:textColor="#131313" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e91010"
                android:text="1" />
            <TextView
                android:id="@+id/ml_chart_tv_one"
                android:layout_margin="2dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一名"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f2651e"
                android:text="2" />
            <TextView
                android:textSize="10sp"
                android:id="@+id/ml_chart_tv_two"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二名"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="10sp"
                android:layout_margin="2dp"
                android:textColor="#a77a07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
            <TextView
                android:textSize="10sp"
                android:id="@+id/ml_chart_tv_three"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三名"/>
        </LinearLayout>

    </LinearLayout>
    <!--更多-->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.2"
        android:src="@mipmap/ic_action_more" />

</LinearLayout>