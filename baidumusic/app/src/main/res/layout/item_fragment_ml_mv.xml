<?xml version="1.0" encoding="utf-8"?><!--乐库-MV-界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_fra_ml_mv_recycler_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/new_song" />

    <TextView
        android:id="@+id/item_fra_ml_mv_recycler_title"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#313131"
        android:textSize="10sp"
        android:text="mv名" />

    <TextView
        android:id="@+id/item_fra_ml_mv_recycler_name"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作者" />
</LinearLayout>