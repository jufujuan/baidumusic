<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <LinearLayout
            android:background="#39aaf1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/main_tablayout"
                app:tabIndicatorHeight="0dp"
                app:tabTextColor="#ccddf5"
                app:tabSelectedTextColor="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <Button
                android:layout_margin="7dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_main_bt_titlebar_new_search" />

            <Button
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_titlebar_login" />

            <Button
                android:layout_margin="7dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:background="@mipmap/bt_titlebar_setting_normal" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"/>


    </LinearLayout>

    <include
        layout="@layout/item_activity_main_minibar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
