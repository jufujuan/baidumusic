<?xml version="1.0" encoding="utf-8"?><!--我的fragment-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#06a8f2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/fra_mymusic_try" />

                <TextView
                    android:id="@+id/mine_try_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随便听听"
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
        <!--本地音乐-->
        <LinearLayout
            android:id="@+id/fra_local_music_item"
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_local_normal" />

            <TextView
                android:id="@+id/fra_local_music_tv"
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐" />

            <TextView

                style="@style/FragmentMineTvDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="几首歌" />

            <ImageView
                style="@style/FragmentMineImgReight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bt_localmusic_play_nor" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--最近播放-->
        <LinearLayout
            android:id="@+id/fra_current_play_item"
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_play_normal" />

            <TextView
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近播放" />

            <TextView
                style="@style/FragmentMineTvDetails"
                android:layout_height="wrap_content"
                android:text="几首歌" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_songlist_detail_nor" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--下载管理-->
        <LinearLayout
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_download_normal" />

            <TextView
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载管理" />

            <TextView
                style="@style/FragmentMineTvDetails"
                android:layout_height="wrap_content"
                android:text="几首歌" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_songlist_detail_nor" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--我的K歌-->
        <LinearLayout
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_ktv_normal" />

            <TextView
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的k歌" />

            <TextView
                style="@style/FragmentMineTvDetails"
                android:layout_height="wrap_content"
                android:text="几首歌" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_songlist_detail_nor" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--自建歌单-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="自建歌单"
            android:textColor="#161616"
            android:textSize="12sp" />
        <!--我喜欢的单曲-->
        <LinearLayout
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_like" />

            <TextView
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我喜欢的单曲" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_songlist_detail_nor" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--新建歌单-->
        <LinearLayout
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/FragmentMineImgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mymusic_add_nor" />

            <TextView
                style="@style/FragmentMineTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建歌单" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            style="@style/FragmentMineView"
            android:layout_height="1dp" />
        <!--收藏歌单-->
        <TextView
            android:layout_margin="10dp"
            android:textColor="#161616"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收藏歌单" />
        <!--立即登陆-->
        <LinearLayout
            style="@style/FragmentMineItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="5dp"
                android:src="@mipmap/icon_tips_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登录,让音乐跟着你走" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>