<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--minefragment行布局距离左右的距离-->
    <style name="FragmentMineItem">
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--minefragment行布局内部左边图片-->
    <style name="FragmentMineImgLeft">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--minefragment行布局内部右边图片-->
    <style name="FragmentMineImgReight">
        <item name="android:layout_margin">15dp</item>
    </style>

    <!--minefragment行布局内部标题文字-->
    <style name="FragmentMineTvTitle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#131313</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--minefragment行布局内部详情文字-->
    <style name="FragmentMineTvDetails">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#9b9797</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--mineFragment分割线的具体设置-->
    <style name="FragmentMineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">37dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#cac8c8</item>
    </style>
    <!--recommendFragment的item的左边的图标-->
    <style name="FragmentRecommendImgLeft">
        <item name="android:layout_margin">7dp</item>
    </style>
    <!--recommendFragment的item的右边的图标-->
    <style name="FragmentRecommendImgRight">
        <item name="android:layout_margin">7dp</item>
        <item name="android:src">@mipmap/ic_action_more</item>
    </style>



</resources>
